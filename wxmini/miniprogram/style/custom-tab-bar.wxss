/* custom-tab-bar.wxss */

/* 底部标签栏样式 */
.tab-bar {
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.8);
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  display: flex;
  justify-content: space-around;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #888;
}

.tab-item.active {
  color: #4F8EF7;
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.tab-text {
  font-size: 24rpx;
}