/* pages/onboarding/onboarding.wxss */

/* 引入字体图标 */
@import "../../style/iconfont.wxss";

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  background-color: #ffffff;
  color: #333;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: auto;
  padding: 0;
  margin-bottom: 0;
  justify-content: flex-start;
}

.flex-1 {
  flex: 1;
}

.p-6 {
  padding: 30rpx;
}

.flex-col {
  display: flex;
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.space-x-4 {
  display: flex;
}

.space-x-4 > button:not(:first-child) {
  margin-left: 20rpx;
}

.mb-2 {
  margin-bottom: 10rpx;
}

.mb-4 {
  margin-bottom: 20rpx;
}

.mb-6 {
  margin-bottom: 30rpx;
}

.mb-8 {
  margin-bottom: 40rpx;
}

.ml-2 {
  margin-left: 10rpx;
}

.mr-2 {
  margin-right: 10rpx;
}

.mt-auto {
  margin-top: auto;
}

.w-full {
  width: 100%;
}

.w-1-3 {
  width: 33%;
}

.w-2-3 {
  width: 67%;
}

.rounded-lg {
  border-radius: 16rpx;
}

.text-white {
  color: white;
}

.text-gray-400 {
  color: #9ca3af;
}

.text-gray-500 {
  color: #6b7280;
}

.text-gray-700 {
  color: #374151;
}

.text-blue-500 {
  color: #4F8EF7;
}

.text-pink-500 {
  color: #ec4899;
}

.text-2xl {
  font-size: 48rpx;
}

.text-3xl {
  font-size: 60rpx;
}

.text-sm {
  font-size: 24rpx;
}

.font-medium {
  font-weight: 500;
}

.font-bold {
  font-weight: 700;
}

.border {
  border-width: 2rpx;
  border-style: solid;
}

.border-gray-300 {
  border-color: #d1d5db;
}

.border-red-500 {
  border-color: #ef4444;
}

.p-3 {
  padding: 15rpx;
}

.p-4 {
  padding: 20rpx;
}

.p-5 {
  padding: 25rpx;
}

.py-3 {
  padding-top: 15rpx;
  padding-bottom: 15rpx;
}

.px-4 {
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.pl-10 {
  padding-left: 50rpx;
}

.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

.left-3 {
  left: 15rpx;
}

.top-3 {
  top: 15rpx;
}

.bg-gray-100 {
  background-color: #f3f4f6;
}

.grid {
  display: grid;
}

.grid-cols-2 {
  grid-template-columns: repeat(2, 1fr);
}

.gap-4 {
  gap: 20rpx;
}

/* 特殊样式 */
.card {
  background-color: white;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.progress-bar {
  height: 8rpx;
  background-color: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #4F8EF7, #2F6AD9);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.input-field {
  transition: all 0.3s ease;
  border: 2rpx solid #E5E7EB;
}

.gender-btn {
  transition: all 0.3s ease;
  display: flex;
}

.gender-btn.active {
  background-color: #4F8EF7;
  color: white;
  border-color: #4F8EF7;
}

.btn-primary {
  background: linear-gradient(135deg, #4F8EF7, #2F6AD9);
  transition: all 0.3s ease;
}

.flex {
  display: flex;
}