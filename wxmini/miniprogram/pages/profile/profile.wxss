/* profile.wxss */

/* 引入字体图标 */
@import "../../style/iconfont.wxss";

page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  background-color: #f5f5f5;
  color: #333;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.container {
  height: auto;
  padding: 16rpx;
  margin-bottom: 100rpx;
  justify-content: flex-start;
}

.card {
  background-color: white;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 12rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  margin-bottom: 20rpx;
  padding: 20rpx;
}

.p-5 {
  padding: 20rpx;
}

.flex {
  display: flex;
}

.flex-1 {
  flex: 1;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-around {
  justify-content: space-around;
}

.justify-between {
  justify-content: space-between;
}

.space-x-4 > view:not(:first-child),
.space-x-4 > button:not(:first-child) {
  margin-left: 16rpx;
}

.space-y-3 > view:not(:first-child) {
  margin-top: 12rpx;
}

.space-y-4 > view:not(:first-child),
.space-y-4 > button:not(:first-child) {
  margin-top: 16rpx;
}

.mb-1 {
  margin-bottom: 4rpx;
}

.mb-2 {
  margin-bottom: 8rpx;
}

.mb-3 {
  margin-bottom: 12rpx;
}

.mb-4 {
  margin-bottom: 16rpx;
}

.mr-2 {
  margin-right: 8rpx;
}

.mr-3 {
  margin-right: 12rpx;
}

.mt-1 {
  margin-top: 4rpx;
}

.pt-4 {
  padding-top: 16rpx;
}

.p-2 {
  padding: 8rpx;
}

.px-4 {
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.py-2 {
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.pl-10 {
  padding-left: 40rpx;
}

.w-full {
  width: 100%;
}

.w-16 {
  width: 64rpx;
}

.h-16 {
  height: 64rpx;
}

.text-xs {
  font-size: 24rpx;
}

.text-sm {
  font-size: 28rpx;
}

.text-lg {
  font-size: 36rpx;
}

.text-xl {
  font-size: 40rpx;
}

.text-2xl {
  font-size: 48rpx;
}

.font-medium {
  font-weight: 500;
}

.font-semibold {
  font-weight: 600;
}

.text-white {
  color: white;
}

.text-gray-400 {
  color: #9ca3af;
}

.text-gray-500 {
  color: #6b7280;
}

.text-gray-700 {
  color: #374151;
}

.text-blue-500 {
  color: #4F8EF7;
}

.bg-gray-50 {
  background-color: #f9fafb;
}

.hover-bg-gray-50:active {
  background-color: #f9fafb;
}

.border {
  border: 2rpx solid;
}

.border-t {
  border-top: 2rpx solid;
}

.border-gray-100 {
  border-color: #f3f4f6;
}

.border-gray-300 {
  border-color: #d1d5db;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-full {
  border-radius: 50%;
}

.avatar {
  background: linear-gradient(135deg, #4F8EF7, #2F6AD9);
  width: 96rpx;
  height: 96rpx;
}

.input-field {
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 8rpx;
}

.relative {
  position: relative;
}

.absolute {
  position: absolute;
}

.left-3 {
  left: 12rpx;
}

.top-3 {
  top: 12rpx;
}

.gender-btn {
  transition: all 0.3s ease;
}

.gender-btn.active {
  background-color: #4F8EF7;
  color: white;
  border-color: #4F8EF7;
}

.btn-primary {
  background: linear-gradient(135deg, #4F8EF7, #2F6AD9);
}

.edit-section {
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transform: translateY(-10rpx);
  transition-property: max-height, opacity, transform;
  transition-duration: 0.5s, 0.3s, 0.3s;
  transition-timing-function: ease;
}

.edit-section.active {
  max-height: 1000rpx;
  opacity: 1;
  transform: translateY(0);
}

/* 移除自定义tab-bar样式，使用系统tabBar */

.toast {
  position: fixed;
  bottom: 160rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: #10b981;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  opacity: 0;
  transition: opacity 0.5s ease;
  z-index: 2000;
}

.toast.show {
  opacity: 1;
}